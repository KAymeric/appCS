<Page x:Class="lapp_de_ses_morts.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lapp_de_ses_morts"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <TextBlock FontSize="18" Height="50" Width="400" Margin="200,101,200,283">
    username
        </TextBlock>
        <TextBox
    Name="usernameText"
    TextWrapping="Wrap"
    AcceptsReturn="True"
    Height="50" Width="400" Margin="200,126,200,258"
>
        </TextBox>
        <TextBlock FontSize="18" Height="50" Width="400" Margin="200,198,200,186">
    password
        </TextBlock>
        <TextBox
    Name="passwordText"
    TextWrapping="Wrap"
    AcceptsReturn="True"
    Height="50" Width="400" Margin="200,223,200,161"
>
        </TextBox>
        <Button Name="valid"
    BorderBrush="Black" BorderThickness="1" 
    Click="OnClick"
        Height="50" Width="100" Margin="350,308,350,76"
>
            valider
        </Button>
    </Grid>
</Page>
